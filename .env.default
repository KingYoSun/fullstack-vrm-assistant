# compose / runtime
COMPOSE_PROFILES=dev
REQUEST_TIMEOUT_SEC=30

# backend
BACKEND_PORT=8000
PROVIDERS_CONFIG_PATH=/workspace/config/providers.yaml
POSTGRES_PORT=5432
POSTGRES_USER=vrm
POSTGRES_PASSWORD=vrm_password
POSTGRES_DB=vrm
DATABASE_URL=postgresql+asyncpg://vrm:vrm_password@postgres:5432/vrm

# frontend
FRONTEND_PORT=5173

# LLM (gpt-oss-120b via vLLM)
LLM_IMAGE=vllm/vllm-openai:latest
LLM_PLATFORM=linux/aarch64
LLM_PROVIDER=local-gpt-oss-120b
LLM_ENDPOINT=http://llm:18000/v1
LLM_MODEL=gpt-oss-120b
LLM_MODEL_LOCAL_DIR=./models/llm
LLM_MODEL_DIR=/models
LLM_MODEL_PATH=/models/gpt-oss-120b
LLM_PORT=18000
LLM_TP_SIZE=1
LLM_GPU_COUNT=1
LLM_GPU_MEM_UTIL=0.9
LLM_MAX_NUM_SEQS=4
LLM_TEMPERATURE=0.6
LLM_MAX_TOKENS=1024
LLM_TIMEOUT_SEC=30
LLM_STREAM=true
LLM_API_KEY=changeme

# STT (sherpa-onnx)
STT_IMAGE=local/sherpa-onnx:cuda
STT_PLATFORM=linux/aarch64
STT_BACKEND=cuda
STT_CUDA_VERSION=12.8.0
STT_DOCKERFILE=Dockerfile
STT_PROVIDER=sherpa-onnx
STT_ENDPOINT=ws://stt:6006/ws
STT_PORT=6006
STT_MODEL_LOCAL_DIR=./models/stt
STT_LANGUAGE=ja-JP
STT_TARGET_SAMPLE_RATE=16000
STT_ENABLE_PARTIAL=true
STT_VAD=reazon-speech
STT_TIMEOUT_SEC=30
STT_MODEL_DIR=/models
STT_PROVIDER_RUNTIME=cuda
STT_MAX_BATCH_SIZE=8
STT_NUM_THREADS=4

# TTS (Open Audio S1)
TTS_IMAGE=local/openvoice:cuda
TTS_PROVIDER=open-audio-s1
TTS_ENDPOINT=http://tts:7007
TTS_PORT=7007
TTS_MODEL_LOCAL_DIR=./models/tts
TTS_DEFAULT_VOICE=ja_female_1
TTS_LANGUAGE=ja-JP
TTS_OUTPUT_FORMAT=opus
TTS_SAMPLE_RATE=44100
TTS_STREAM=true
TTS_CHUNK_MS=40
TTS_TIMEOUT_SEC=30
TTS_MODEL_DIR=/models/tts
TTS_GPU_COUNT=1
TTS_BACKEND=cpu

# Embedding
EMBEDDING_IMAGE=tei-cuda-arm64:120
EMBEDDING_PLATFORM=linux/aarch64
EMBEDDING_PROVIDER=local-embedding
EMBEDDING_ENDPOINT=http://embedding:9000/v1
EMBEDDING_PORT=9000
EMBEDDING_MODEL=intfloat/multilingual-e5-base
EMBEDDING_MODEL_LOCAL_DIR=./models/embedding
EMBEDDING_BATCH_SIZE=16
EMBEDDING_TIMEOUT_SEC=30
EMBEDDING_MODEL_DIR=/data

# RAG
RAG_PROVIDER=faiss
RAG_INDEX_PATH=/data/faiss/index.bin
RAG_TOP_K=5
RAG_EMBEDDING_PROVIDER=local-embedding
